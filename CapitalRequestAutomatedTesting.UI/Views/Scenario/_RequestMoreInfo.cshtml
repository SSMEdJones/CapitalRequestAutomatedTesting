@using CapitalRequestAutomatedTesting.UI.ScenarioFramework
@model ScenarioDetailsViewModel


<div>
    <div class="form-group">
        <label asp-for="RequestingGroupId" class="control-label"></label>
        <select asp-for="RequestingGroupId" asp-items="Model.RequestingGroups" class="form-control"
                onchange="document.getElementById('actionType').value='RequestingGroupChanged'; this.form.submit();">
            <option value="">-- Select One --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="TargetGroupId" class="control-label"></label>
        <select asp-for="TargetGroupId" asp-items="Model.TargetGroups" class="form-control">
            <option value="">--Select One--</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ReviewerId" class="control-label"></label>
        <select asp-for="ReviewerId"
                asp-items="Model.Reviewers"
                class="form-control"
                onchange="document.getElementById('actionType').value='ReviewerSelected'; this.form.submit();">
            <option value="">-- Select Reviewer --</option>
        </select>
    </div>
